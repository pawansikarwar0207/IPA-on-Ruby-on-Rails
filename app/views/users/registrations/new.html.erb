<div class="col-lg-6 mx-auto">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title">Sign up</h2>
      <hr>
    </div>
    <div class="container mb-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :full_name %><br />
        <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class:"form-control mt-2 mb-2" %>
      </div>

      <div class="form-group">
        <%= f.label :contact_number %><br />
        <%= f.text_field :contact_number, autofocus: true, autocomplete: "contact_number", class:"form-control mt-2 mb-2" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mt-2 mb-2" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control mt-2 mb-2" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mt-2 mb-2" %>
      </div>

      <div class="actions form-group">
        <%= f.submit "Register Here", class:"btn btn-primary mt-2 mb-2" %>
        <%= link_to "Log in", new_session_path(resource_name), class:"btn btn-primary mt-2 mb-2" %>
      </div>
      <% end %>
    </div>
  </div>
</div>







