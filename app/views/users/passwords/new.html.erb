<div class="col-lg-6 mx-auto">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title">Forgot your password?</h2>
    </div>
    <div class="container mb-3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mt-2 mb-2" %>
      </div>

      <div class="actions form-group">
        <%= f.submit "Send me reset password instructions", class:"btn btn-primary mt-2 mb-2" %>
      </div>
      <% end %>

      <%= link_to "Log in", new_session_path(resource_name),class:"btn btn-primary mt-2 mb-2" %>
      <%= link_to "Sign up", new_registration_path(resource_name),class:"btn btn-primary mt-2 mb-2" %>
    </div>
  </div>
</div>