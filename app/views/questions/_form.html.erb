<%= form_with model: question do |form| %>
<div class="form-group">
	<%= form.label :question %>
	<%= form.text_area :question, class: "form-control mt-2 mb-2" %>
</div>

<div class="form-group">
	<%= form.label :keywords %>
	<%= form.text_area :keywords, class: "form-control mt-2 mb-2" %>
</div>

<div class="form-group">
	<%= form.label :content %>
	<%= form.rich_text_area :content, class: "form-control mt-2 mb-2" %>
</div>
<div class="form-group">
	<%= form.submit class:"btn btn-primary" %>
</div>

<% end %>
