<div class="col-lg-10 mx-auto mt-4 mb-4">
	<div class="card shadow">
		<div class="card-body">
			<div class="card-tittle">
				<h1 class="text-center border-bottom">Answer</h1>
			</div>
			<div class="row mt-5">
				<div class="col-lg-12">
					<p class="lead"><%= @question.answer %></p>
					<%= link_to 'Back to Question', admin_questions_path, class:"btn btn-primary mt-3 mb-3 me-2" %>
					<%= link_to 'Edit', edit_admin_question_path(@question), class:"btn btn-primary mt-3 mb-3 me-2" %>
					<%= link_to 'Delete',admin_question_path(@question),class:"btn btn-primary mt-3 mb-3 me-2", data: {turbo_confirm: 'Are You Sure?', turbo_method: :delete} %>
				</div>
			</div>
		</div>
	</div>
</div>