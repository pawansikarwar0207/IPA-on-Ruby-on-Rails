<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom mt-3">
  <h1 class="h2">Dashboard</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to "Add Question", new_admin_question_path, class:"btn btn-sm btn-outline-primary"%> 
    </div>
  </div>
</div>
<div >
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Question</th>
        <th>Keywords</th>
        <th>Is_premium?</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.keywords %></td>
        <td><%= question.is_premium? %></td>
        <td>
          <div class="dropdown">
            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
              Action
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li><%= link_to 'View', admin_question_path(question), class:"dropdown-item" %></li>
              <li><%= link_to 'Edit', edit_admin_question_path(question), class:"dropdown-item" %></li>
              <li><%= link_to 'Delete', admin_questions_path(question),class:"dropdown-item",  data: {turbo_method: :delete, turbo_confirm: 'Are Your Sure?'} %></li>
            </ul>
          </div>
        </td>
      </tr>
      <% end -%>
    </tbody>
  </table>
  <div class="mt-3">
    <%= paginate @questions %>
  </div>
</div>

