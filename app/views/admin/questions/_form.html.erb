<%= form_with(model: [:admin, @question]) do |form| %>
<div class="form-group">
	<%= form.label :title %>
	<%= form.text_field :title, class: "form-control mt-2 mb-2" %>
</div>

<div class="form-group">
	<%= form.label :keywords %>
	<%= form.text_field :keywords, class: "form-control mt-2 mb-2" %>
</div>

<div class="form-check">
	<%= form.label :is_premium? %>
	<%= form.check_box :is_premium, class: "form-check-input" %>
</div>

<div class="form-group">
	<%= form.label :answer, class:'mt-2 mb-2' %>
	<%= form.rich_text_area :content, class: "form-control mt-3 mb-2" %>
</div>
	
<div class="form-group">
	<%= form.submit 'Submit', class: "btn btn-primary mt-2 mb-2" %>
</div>

<% end -%>